---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  // Changed 'blog' to 'blogs' here
  const blogEntries = await getCollection('blogs');
  return blogEntries.map(entry => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render(); // Render the MDX body
---

<BaseLayout title={entry.data.title}>
  <article class="max-w-4xl mx-auto p-4 md:p-8">
    {entry.data.cover && (
      // Changed 'images/blog' to 'images/blogs' here
      <img
        src={`/nh-web/images/blogs/${entry.slug}/${entry.data.cover}`}
        alt={`Cover image for ${entry.data.title}`}
        class="w-full h-80 object-cover rounded-lg mb-8 shadow-md"
      />
    )}
    <h1 class="text-5xl font-extrabold text-gray-900 mb-4">{entry.data.title}</h1>
    <p class="text-xl text-gray-700 mb-6">{entry.data.description}</p>

    <div class="flex items-center text-gray-500 text-sm mb-8">
      <span>Published on {entry.data.date.toLocaleDateString('en-IN')}</span>
      <span class="mx-2">•</span>
      <span>{entry.data.readtime} read</span>
      {entry.data.authorSlug && (
        <>
          <span class="mx-2">•</span>
          <span>By <a href={`/nh-web/members/${entry.data.authorSlug}`} class="text-blue-600 hover:underline">{entry.data.authorSlug}</a></span>
        </>
      )}
      {entry.data.coauthorSlugs && entry.data.coauthorSlugs.length > 0 && (
        <>
          <span class="mx-2">•</span>
          <span>Co-authored by {entry.data.coauthorSlugs.map(slug => (
            <a href={`/nh-web/members/${slug}`} class="text-blue-600 hover:underline mx-0.5">{slug}</a>
          )).reduce((prev, curr) => [prev, ', ', curr])}</span>
        </>
      )}
    </div>

    <div class="prose prose-lg max-w-none">
      <Content /> {/* This renders the MDX content */}
    </div>

    {entry.data.tagSlugs && entry.data.tagSlugs.length > 0 && (
      <div class="mt-10">
        <h3 class="text-xl font-semibold mb-3">Tags:</h3>
        <div class="flex flex-wrap gap-2">
          {entry.data.tagSlugs.map(slug => (
            <a href={`/nh-web/tags/${slug}`} class="bg-blue-100 text-blue-800 text-sm font-medium px-3 py-1 rounded-full hover:bg-blue-200 transition-colors">
              {slug}
            </a>
          ))}
        </div>
      </div>
    )}
  </article>
</BaseLayout>